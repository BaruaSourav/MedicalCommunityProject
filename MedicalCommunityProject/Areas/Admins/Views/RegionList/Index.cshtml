@model IEnumerable<BOLayerMedCom.Region>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admins/Views/Shared/AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.District.DistrictName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RegionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.District.DistrictName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RegionID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RegionID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RegionID })
        </td>
    </tr>
}

</table>
